mixin header_nologin()
  header#HEADER
    ul.nav.nav-pills.pull-right
      li
        form.form-inline
          .form-group
            label.sr-only(for='InputSearch') 検索
            .input-group
              input#InputSearch.form-control.input-sm(type='search', placeholder='検索')
              .input-group-addon
                span.glyphicon.glyphicon-search
      li
        a(href='#', data-toggle='modal', data-target='#MODAL_LOGIN_WINDOW')
          span.glyphicon.glyphicon-user
          ログイン
    h3.text-muted
      a(href='top.html')
        img(src='images/logo_angkyut_white.svg', height='20')
  +modal_login_window()

