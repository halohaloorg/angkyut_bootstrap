      // Text input
      .form-group
        label.col-md-4.control-label(for='address_city') 住所：市区群*
        .col-md-4
          input#address_city.form-control.input-md(name='address_city', type='text', placeholder='例：千代田区', required='')
      // Text input
      .form-group
        label.col-md-4.control-label(for='address_town') 住所：町村番地・ビル名*
        .col-md-4
          input#address_town.form-control.input-md(name='address_town', type='text', placeholder='神田神保町1-2-3○○○ビル', required='')
      // Text input
      .form-group
        label.col-md-4.control-label(for='phone') 電話番号*
        .col-md-4
          input#phone.form-control.input-md(name='phone', type='text', placeholder='000-0000-0000', required='')
      // Text input
      .form-group
        label.col-md-4.control-label(for='mail') メールアドレス*
        .col-md-4
          input#mail.form-control.input-md(name='mail', type='text', placeholder='xxxx@example.com', required='')
      // Text input
      .form-group
        label.col-md-4.control-label(for='mail_conform') メールアドレス（確認）*
        .col-md-4
          input#mail_conform.form-control.input-md(name='mail_conform', type='text', placeholder='xxxx@example.com', required='')

  form.form-horizontal(action='confirmation.html')
    fieldset
      // Form Name
      .form-group
        label.col-sm-4.control-label お届け希望日
        .col-sm-4
          select.form-control
            option(value='指定なし', selected='selected') 指定なし
            option(value='2015/03/19') 3月19日（木）
            option(value='2015/03/20') 3月20日（金）
            option(value='2015/03/21') 3月21日（土）
            option(value='2015/03/22') 3月22日（日）
            option(value='2015/03/23') 3月23日（月）
            option(value='2015/03/24') 3月24日（火）
            option(value='2015/03/25') 3月25日（水）
            option(value='2015/03/26') 3月26日（木）
      .form-group
        label.col-sm-4.control-label お届け希望時間帯
        .col-sm-4
          select.form-control
            option(value='0') 指定なし
            option(value='1') 午前中
            option(value='2') 12時-14時
            option(value='3') 14時-16時
            option(value='4') 16時-18時
            option(value='5') 18時-21時
      .form-group
        label.col-sm-4.control-label お支払い方法
        .col-sm-4
          label.radio-inline
            input(type='radio', name='payment', value='option1', checked)
            | 代金引換（手数料315円）
          label.radio-inline
            input(type='radio', name='payment', value='option2')
            | 銀行振込
      .form-group
        label.col-sm-4.control-label 領収書
        .col-sm-4
          label.radio-inline
            input(type='radio', name='receipt', value='option1', checked)
            | 不要
          label.radio-inline
            input(type='radio', name='receipt', value='option2')
            | 必要
      .form-group
        label.col-sm-4.control-label 備考欄
        .col-sm-4
          textarea.form-control(rows='3')

    p.text-center
      a(href='rule.html', target='_blank')
        ご利用規約および個人情報の取り扱いに関する同意書

    ul.pager
      li
        input.btn.btn-lg.btn-primary(value='同意書に同意して入力情報の確認', type='submit')
      li.previous
        a(href='cart.html')
          span(aria-hidden='true') ←
          | 戻る
